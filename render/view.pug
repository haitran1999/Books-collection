html 
  head
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css")
    link(rel="stylesheet" href="/css/view.css")
    
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Coders.Tokyo
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.nav-item.nav-link.active(href='#')
            | Home 
            span.sr-only (current)
          a.nav-item.nav-link(href='/product') Books
          a.nav-item.nav-link(href='/wishlist') Wish List
      form.form-inline.my-2.my-lg-0(action="/product" ,method="GET")
        input.form-control.mr-sm-2(type='search', placeholder='Search',autocomplete="off", aria-label='Search', name="search", value= value ? value : "")
        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    .container.pt-5
      h1(class="text-center") VIEW
      .container.pt-4
        .row
          .col-6.img
            img(src=book.avatar)
          .col-6
            h2 Title: #{book.name}
            h2 Author: #{book.author}
            em Description: #{book.description}
            .button
              a.btn.btn-info(href="/product/edit/" + book.id ,class="btn btn-success" id="delete") Edit
              a.btn.btn-info(href="/product/delete/" + book.id ,class="btn btn-danger" id="delete") Delete           

